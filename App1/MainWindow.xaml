<!-- MainWindow.xaml -->
    
    <Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Calculator">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="360"
              Padding="16">

            <Grid.Resources>

                <!-- 一般數字 / 功能鍵 -->
                <Style x:Key="CalcButtonStyle" TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="MinHeight" Value="44"/>
                    <!-- 讓按鈕比較不扁 -->
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="CornerRadius" Value="8"/>
                    <Setter Property="Background" Value="#FFE5E5E5"/>
                    <Setter Property="Foreground" Value="#FF222222"/>
                    <Setter Property="UseSystemFocusVisuals" Value="False"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />

                                            <!-- 滑鼠移上去：微亮 -->
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                Value="#FFF0F0F0"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <!-- 按下去：再深一點 -->
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                Value="#FFDDDDDD"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Disabled">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Opacity"
                                                Value="0.4"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <ContentPresenter
                            x:Name="ContentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            FontSize="{TemplateBinding FontSize}"
                            Foreground="{TemplateBinding Foreground}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- 四則運算鍵 -->
                <Style x:Key="OperatorButtonStyle" TargetType="Button"
           BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FFD7E3FF"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>

                <!-- 等號鍵：顏色翻轉（藍底白字 -> 白底藍字） -->
                <Style x:Key="EqualButtonStyle" TargetType="Button"
           BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FF4C6FFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>

                    <!-- 覆蓋 Template，改成 hover/pressed 翻轉顏色 -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />

                                            <!-- 滑鼠移上去：白底藍字 -->
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                Value="White"/>
                                                    <Setter Target="ContentPresenter.Foreground"
                                                Value="#FF4C6FFF"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <!-- 按下去：深藍底白字 -->
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                Value="#FF344FCC"/>
                                                    <Setter Target="ContentPresenter.Foreground"
                                                Value="White"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Disabled">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Opacity"
                                                Value="0.4"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <ContentPresenter
                                        x:Name="ContentPresenter"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Content}"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}" />    
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Grid.Resources>




            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#FF222222"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,0,16">
                <TextBlock x:Name="DisplayText"
                           Text="0"
                           FontSize="52"
                           Foreground="White"
                           TextAlignment="Right"
                           VerticalAlignment="Bottom"/>
            </Border>

            <Border Grid.Row="1"
                    CornerRadius="12"
                    Background="#FFF3F3F3"
                    Padding="8">
                <Grid x:Name="ButtonsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: AC C % / -->
                    <Button Content="AC" Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="C" Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="%" Grid.Row="0" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="/" Grid.Row="0" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 1: 7 8 9 * -->
                    <Button Content="7" Grid.Row="1" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="8" Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="9" Grid.Row="1" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="*" Grid.Row="1" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 2: 4 5 6 - -->
                    <Button Content="4" Grid.Row="2" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="5" Grid.Row="2" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="6" Grid.Row="2" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="-" Grid.Row="2" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 3: 1 2 3 + -->
                    <Button Content="1" Grid.Row="3" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="2" Grid.Row="3" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="3" Grid.Row="3" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="+" Grid.Row="3" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 4: 00 0 . = -->
                    <Button Content="00" Grid.Row="4" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="0" Grid.Row="4" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="." Grid.Row="4" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="=" Grid.Row="4" Grid.Column="3"
                            Style="{StaticResource EqualButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
