<!-- MainWindow.xaml -->

<Window
    x:Class="WinUICalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Calculator">

    <Grid x:Name="RootGrid"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="380"
          Padding="16">

            <Grid.Resources>

                <!-- 一般數字 / 功能鍵 -->
                <Style x:Key="CalcButtonStyle" TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="MinHeight" Value="44"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="CornerRadius" Value="8"/>
                    <Setter Property="Background" Value="#FFE5E5E5"/>
                    <Setter Property="Foreground" Value="#FF222222"/>
                    <Setter Property="UseSystemFocusVisuals" Value="False"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />

                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                        Value="#FFF0F0F0"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background"
                                                        Value="#FFDDDDDD"/>
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState x:Name="Disabled">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Opacity"
                                                        Value="0.4"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <ContentPresenter x:Name="ContentPresenter"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"
                                                  FontSize="{TemplateBinding FontSize}"
                                                  Foreground="{TemplateBinding Foreground}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style x:Key="OperatorButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FFD7E3FF"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
                
                <Style x:Key="EqualButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FF4C6FFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

            </Grid.Resources>

            <Border Background="#FF121212"
                    CornerRadius="24"
                    Padding="16">

                <Grid RowDefinitions="Auto,*">
                    <!-- Display Area -->
                    <Border Grid.Row="0"
                            Background="#FF222222"
                            CornerRadius="12"
                            Padding="12"
                            Margin="0,0,0,12">
                        <TextBlock x:Name="DisplayText"
                                   Text="{Binding Display}"
                                   FontSize="52"
                                   Foreground="White"
                                   TextAlignment="Right"
                                   VerticalAlignment="Bottom"/>
                    </Border>

                    <!-- Buttons Area -->
                    <Border Grid.Row="1"
                            Background="#FF1E1E1E"
                            CornerRadius="16"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0: AC C % / -->
                            <Button Content="AC" Grid.Row="0" Grid.Column="0"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="AC"/>
                            <Button Content="C" Grid.Row="0" Grid.Column="1"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="C"/>
                            <Button Content="%" Grid.Row="0" Grid.Column="2"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="%"/>
                            <Button Content="/" Grid.Row="0" Grid.Column="3"
                                    Style="{StaticResource OperatorButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="/"/>

                            <!-- Row 1: 7 8 9 * -->
                            <Button Content="7" Grid.Row="1" Grid.Column="0"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="7"/>
                            <Button Content="8" Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="8"/>
                            <Button Content="9" Grid.Row="1" Grid.Column="2"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="9"/>
                            <Button Content="*" Grid.Row="1" Grid.Column="3"
                                    Style="{StaticResource OperatorButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="*"/>

                            <!-- Row 2: 4 5 6 - -->
                            <Button Content="4" Grid.Row="2" Grid.Column="0"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="4"/>
                            <Button Content="5" Grid.Row="2" Grid.Column="1"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="5"/>
                            <Button Content="6" Grid.Row="2" Grid.Column="2"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="6"/>
                            <Button Content="-" Grid.Row="2" Grid.Column="3"
                                    Style="{StaticResource OperatorButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="-"/>

                            <!-- Row 3: 1 2 3 + -->
                            <Button Content="1" Grid.Row="3" Grid.Column="0"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="1"/>
                            <Button Content="2" Grid.Row="3" Grid.Column="1"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="2"/>
                            <Button Content="3" Grid.Row="3" Grid.Column="2"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="3"/>
                            <Button Content="+" Grid.Row="3" Grid.Column="3"
                                    Style="{StaticResource OperatorButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="+"/>

                            <!-- Row 4: 00 0 . = -->
                            <Button Content="00" Grid.Row="4" Grid.Column="0"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="00"/>
                            <Button Content="0" Grid.Row="4" Grid.Column="1"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="0"/>
                            <Button Content="." Grid.Row="4" Grid.Column="2"
                                    Style="{StaticResource CalcButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="."/>
                            <Button Content="=" Grid.Row="4" Grid.Column="3"
                                    Style="{StaticResource EqualButtonStyle}"
                                    Command="{Binding ButtonCommand}"
                                    CommandParameter="="/>

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
