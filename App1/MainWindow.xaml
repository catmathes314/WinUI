<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Calculator">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="360"
              Padding="16">

            <Grid.Resources>

                <Style x:Key="CalcButtonStyle" TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="CornerRadius" Value="8"/>
                    <Setter Property="Background" Value="#FFE5E5E5"/>
                    <Setter Property="Foreground" Value="#FF222222"/>
                </Style>

                <Style x:Key="OperatorButtonStyle" TargetType="Button"
                       BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FFD7E3FF"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>

                <Style x:Key="EqualButtonStyle" TargetType="Button"
                       BasedOn="{StaticResource CalcButtonStyle}">
                    <Setter Property="Background" Value="#FF4C6FFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#FF222222"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,0,16">
                <TextBlock x:Name="DisplayText"
                           Text="0"
                           FontSize="52"
                           Foreground="White"
                           TextAlignment="Right"
                           VerticalAlignment="Bottom"/>
            </Border>

            <Border Grid.Row="1"
                    CornerRadius="12"
                    Background="#FFF3F3F3"
                    Padding="8">
                <Grid x:Name="ButtonsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: AC C % / -->
                    <Button Content="AC" Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="C" Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="%" Grid.Row="0" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="/" Grid.Row="0" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 1: 7 8 9 * -->
                    <Button Content="7" Grid.Row="1" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="8" Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="9" Grid.Row="1" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="*" Grid.Row="1" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 2: 4 5 6 - -->
                    <Button Content="4" Grid.Row="2" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="5" Grid.Row="2" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="6" Grid.Row="2" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="-" Grid.Row="2" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 3: 1 2 3 + -->
                    <Button Content="1" Grid.Row="3" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="2" Grid.Row="3" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="3" Grid.Row="3" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="+" Grid.Row="3" Grid.Column="3"
                            Style="{StaticResource OperatorButtonStyle}"/>

                    <!-- Row 4: 00 0 . = -->
                    <Button Content="00" Grid.Row="4" Grid.Column="0"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="0" Grid.Row="4" Grid.Column="1"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="." Grid.Row="4" Grid.Column="2"
                            Style="{StaticResource CalcButtonStyle}"/>
                    <Button Content="=" Grid.Row="4" Grid.Column="3"
                            Style="{StaticResource EqualButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
